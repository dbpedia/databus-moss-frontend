{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "npm: dev",
          "type": "npm",
          "script": "dev",
          "isBackground": true,
          "problemMatcher": [
              {
                  "owner": "custom",
                  "fileLocation": ["relative", "${workspaceFolder}"],
                  "pattern": [
                      {
                          "regexp": ".",
                          "file": 1,
                          "location": 2,
                          "message": 3
                      }
                  ],
                  "background": {
                      "activeOnStart": true,
                      "beginsPattern": ".",
                      "endsPattern": "ready in"
                  }
              }
          ]
      }
  ]
}
